# 环境变量模板
# 复制此文件为 .env 并填写实际值

# 应用环境（dev, prod, test）
APP_ENV=dev

# 数据库配置
APP_DATABASE_HOST=localhost
APP_DATABASE_PORT=5432
APP_DATABASE_USER=postgres
APP_DATABASE_PASSWORD=postgres
APP_DATABASE_DBNAME=agentflow_dev

# Redis 配置
# 连接模式: standalone(单节点), sentinel(哨兵), cluster(集群)
APP_REDIS_MODE=standalone

# 单节点模式配置 (mode=standalone)
APP_REDIS_HOST=localhost
APP_REDIS_PORT=6379
APP_REDIS_PASSWORD=
APP_REDIS_DB=0

# 哨兵模式配置 (mode=sentinel)
# APP_REDIS_MASTER_NAME=mymaster
# APP_REDIS_SENTINEL_ADDRS=sentinel1:26379,sentinel2:26379,sentinel3:26379
# APP_REDIS_SENTINEL_PASSWORD=

# 集群模式配置 (mode=cluster)
# APP_REDIS_CLUSTER_ADDRS=node1:6379,node2:6379,node3:6379

# 连接池配置（可选）
# APP_REDIS_POOL_SIZE=10
# APP_REDIS_MIN_IDLE_CONNS=5

# ============================
# 认证授权配置（Sprint 5）
# ============================

# JWT 配置
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production_min_32_chars
JWT_ISSUER=AgentFlowCreativeHub

# Google OAuth2 配置
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:8080/api/auth/oauth/google/callback

# GitHub OAuth2 配置
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL=http://localhost:8080/api/auth/oauth/github/callback

# Microsoft OAuth2 配置
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URL=http://localhost:8080/api/auth/oauth/microsoft/callback

# ============================
# AI 提供商配置（Sprint 4）
# ============================

# OpenAI 配置
OPENAI_API_KEY=sk-xxx
OPENAI_ORG_ID=

# Anthropic Claude 配置
ANTHROPIC_API_KEY=sk-ant-xxx

# Google Gemini 配置
GOOGLE_API_KEY=

# Azure OpenAI 配置
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# DeepSeek 配置
DEEPSEEK_API_KEY=

# Qwen (通义千问) 配置
QWEN_API_KEY=

# Ollama (本地部署) 配置
OLLAMA_BASE_URL=http://localhost:11434

# 日志配置
APP_LOG_LEVEL=debug
APP_LOG_FORMAT=console

# ============================
# RAG 配置（Sprint 6）
# ============================

# 向量存储配置
# 可选值: pgvector (默认), qdrant
APP_RAG_VECTOR_STORE_TYPE=pgvector

# Qdrant 配置 (当 TYPE=qdrant 时生效)
APP_RAG_VECTOR_STORE_QDRANT_ENDPOINT=http://localhost:6333
APP_RAG_VECTOR_STORE_QDRANT_API_KEY=
APP_RAG_VECTOR_STORE_QDRANT_COLLECTION=agentflow_chunks

# 默认向量化模型（用于知识库）
RAG_EMBEDDING_MODEL=text-embedding-ada-002
RAG_EMBEDDING_PROVIDER=openai

# 分块配置
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50

# 文档处理配置
RAG_MAX_FILE_SIZE=10485760  # 10MB
RAG_SUPPORTED_FORMATS=txt,md,html,pdf

# ============================
# 通知配置
# ============================

# SMTP 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@agentflow.com
SMTP_FROM_NAME=AgentFlow Creative Hub

# Webhook 配置
WEBHOOK_DEFAULT_URL=https://your-webhook.example.com/notifications
WEBHOOK_TIMEOUT=10  # seconds

# 通知模板路径
NOTIFICATION_TEMPLATE_PATH=config/templates/*.html
